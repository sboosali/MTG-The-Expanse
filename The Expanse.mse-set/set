keyword:
	keyword:
		🏭 Propagate
		
		ie. Riot — Whenever a permanent leaves the battlefield during your turn, …
		ie. Riot — At the beginning of your end step, if a permanent left the battlefield this turn, …
	match: propagate <atom-param>number</atom-param>
	reminder:
		{
		 handle_action_rt(to:"propagate {param1}", "")
		} {
		 if param1.value=="1"
		 then "Create a token copy of a token you control."
		 else "Choose one to {english_number(param1)} tokens you control with different names. Create a token copy of each."
		}
